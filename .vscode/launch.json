    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) snm sim debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/.vscode/run_nose.py",
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/tests",
            "args": [
                "${workspaceRoot}/tests",  // currently selected file
                "-v"       // additional nose parameters â€“
                "-s"        // tweak to your liking
            ],
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ]
        },
        {
            "name": "(gdb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "/usr/bin/python",  /* guide says path to virtual python env, but this is my python path */
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}